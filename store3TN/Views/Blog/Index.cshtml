@model IEnumerable<store3TN.Models.TinTuc>
@{
    ViewBag.Title = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    List<TinTuc> TinTucPhoBien = ViewBag.TinTucPhoBien;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Tin tức</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Tin tức</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->

<!--================Blog Categorie Area =================-->
<section>
    <div></div>
</section>
<!--================Blog Area =================-->
<section class="mt-5 blog_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog_left_sidebar">
                    @foreach (var item in Model)
                    {
                        <article class='row blog_item'>
                            <div class='col-md-3'>
                                <div class='blog_info text-right'>
                                    <ul class='blog_meta list'>
                                        <li><a>@item.NguoiTao<i class='lnr lnr-user'></i></a></li>
                                        <li><a class='d-flex align-items-center'>@item.NgayDang<i
                                                class='lnr lnr-calendar-full'></i></a></li>
                                        <li><a>@item.LuotXem Views<i class='lnr lnr-eye'></i></a></li>
                                        <li><a>06 bình luận<i class='lnr lnr-bubble'></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class='col-md-9'>
                                <div class='blog_post'>
                                    <img src=@item.HinhAnh alt=''>
                                    <div class='blog_details'>
                                        <a href='single-blog.php'>
                                            <h2>@item.TieuDe</h2>
                                        </a>
                                        <p>@item.MoTaNgan</p>
                                        <a href='single-blog.php?idBlog=@item.MaTin' class='white_bg_btn'>Xem thêm</a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                    <nav class="blog-pagination justify-content-center d-flex">
                        <div class="pagination ml-auto">
                            @if (pager.TotalPages > 0)
                            {
                                @if (pager.CurrentPage > 1)
                                {
                                    <a href="/blog/?page=@(pager.CurrentPage-1)" class="prev-arrow"><i
                                    class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                                }
                                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                                {
                                    @if (pge == pager.CurrentPage)
                                    {
                                        <a href="#" class="active">@pge</a>
                                    }
                                    else
                                    {
                                        <a href="/blog/?page=@pge">@pge</a>
                                    }
                                }
                                @if (pager.CurrentPage < pager.TotalPages)
                                {
                                    <a href="/blog/?page=@(pager.CurrentPage+1)" class="next-arrow"><i
                                    class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                                }
                            }
                        </div>
                    </nav>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Posts"
                                onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search Posts'">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="lnr lnr-magnifier"></i></button>
                            </span>
                        </div><!-- /input-group -->
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget author_widget">
                        <img class="author_img rounded-circle" src="~/img/blog/Maria-Kakaka.png" alt="">
                        <h4>Admin</h4>
                        <!-- <p>Senior blog writer</p> -->
                        <div class="social_icon">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-github"></i></a>
                            <a href="#"><i class="fa fa-behance"></i></a>
                        </div>
                        <p>"Ăn mừng thành công cũng tốt, nhưng quan trọng hơn là bạn học được gì từ thất bại."</p>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Bài viết phổ biến</h3>
                        @foreach (var item in TinTucPhoBien)
                        {
                            <div class="media post_item">
                                <img src=@item.HinhAnh alt="post" width="100" , height="70" , style="object-fit: contain;">
                                <div class="media-body">
                                    <a href="">
                                        <h3>@item.TieuDe</h3>
                                    </a>
                                    <p>@item.NgayDang</p>
                                </div>
                            </div>
                        }
                    </aside>
                    <div class="br"></div>
                    <aside class="single_sidebar_widget ads_widget">
                        <a href="#"><img class="img-fluid"
                                src="https://tuoitrethudo.com.vn/stores/news_dataimages/nguyenphuonghanh/122020/10/23/0003_Noel-ngay-bao-nhieu.jpg?rt=20201210230004&fbclid=IwAR04mX2ME-VBj1eYeoPaJbRXIBTExd79rSkju74lKeFzOVYLa-5_W8mznhY"
                                alt=""></a>
                        <div class="br"></div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->